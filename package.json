{
  "name": "api-rest-auth",
  "version": "1.0.0",
  "description": "Implémenter une API REST d'authentification complète intégrant plusieurs méthodes d'authentification ( NodeJS + Express)",
  "type": "module",
  "imports": {
    "#lib/*": "./src/lib/*.js",
    "#controllers/*": "./src/controllers/*.js",
    "#services/*": "./src/services/*.js",
    "#middlewares/*": "./src/middlewares/*.js",
    "#routes/*": "./src/routes/*.js",
    "#schemas/*": "./src/schemas/*.js",
    "#dto/*": "./src/dto/*.js"
  },
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "NODE_ENV=test DATABASE_URL=file:./test.db JWT_SECRET=votre_secret_jwt_de_32_caracteres_minimum NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:jest": "NODE_ENV=test DATABASE_URL=file:./test.db JWT_SECRET=votre_secret_jwt_de_32_caracteres_minimum NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_ENV=test node --test --watch tests/**/*.test.js",
    "test:coverage": "NODE_ENV=test DATABASE_URL=file:./test.db JWT_SECRET=votre_secret_jwt_de_32_caracteres_minimum NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "argon2"
    ]
  },
  "dependencies": {
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "argon2": "^0.44.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "jest": "^29.7.0",
    "prisma": "^7.2.0",
    "supertest": "^7.2.2"
  }
}
